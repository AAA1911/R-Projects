library(factoextra)
fviz_nbclust(all_t , kmeans,
             method = 'gap_stat')
             
             
set.seed(123)
km.res <- kmeans(all_t, 3, nstart = 25)
fviz_cluster(km.res, data = all_t, 
             ellipse.type = "convex",
             palette = "jco",
             repel = TRUE,
             ggtheme = theme_minimal())
